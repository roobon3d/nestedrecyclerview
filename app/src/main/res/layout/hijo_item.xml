<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"


    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="10dp"
    android:clipToPadding="false"
    android:gravity="center"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:id="@+id/fichaHoraIO"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="1dp"
        android:clickable="false"
        android:foreground="?android:attr/selectableItemBackground"
        app:cardElevation="6dp"
        android:backgroundTint="@color/colorAccent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imgIO"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:src="@drawable/entrada" />

            <TextView
                android:id="@+id/textoHora"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="10dp"
                android:layout_toRightOf="@id/imgIO"
                android:gravity="start"
                android:text="09:05"
                android:textAlignment="textStart"
                android:textSize="16sp"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/textoMensaje"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="12dp"
                android:layout_toRightOf="@id/textoHora"
                android:gravity="start"
                android:text="mensaje"
                android:textAlignment="textStart"
                android:textSize="12sp"
                android:textStyle="bold" />


            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_below="@id/imgIO"
                android:layout_margin="1dp"
                android:background="@color/lightgray" />


        </RelativeLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>